<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >



    <RelativeLayout
        android:layout_width="193dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:id="@+id/Left">

        <TextView
            android:id="@+id/partText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal|left"
            android:text="999"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />
        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:text="name"
            android:layout_toRightOf="@+id/partText"
            android:layout_toEndOf="@+id/partText"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Right">

        <TextView
            android:id="@+id/kmText"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:text="25,5 km"
            android:layout_toLeftOf="@+id/kmText2"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/kmText2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:text="250,9 km"
            android:layout_alignTop="@+id/kmText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="30dp"/>
    </RelativeLayout>

</LinearLayout>